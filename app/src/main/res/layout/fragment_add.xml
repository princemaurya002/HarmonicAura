<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flex="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="80dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Entry"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#222"
            android:layout_marginBottom="16dp"/>

        <!-- Energy centers label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy centers"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"
            android:layout_marginBottom="8dp"/>

        <!-- Chips for energy centers -->
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            flex:flexWrap="wrap"
            flex:justifyContent="flex_start"
            android:layout_marginBottom="16dp">

            <TextView
                style="@style/ChipStyle"
                android:text="Calmness"/>
            <TextView
                style="@style/ChipStyle"
                android:text="Serenity"/>
            <TextView
                style="@style/ChipStyle"
                android:text="Balance"/>
            <TextView
                style="@style/ChipStyle"
                android:text="Clarity"/>
            <TextView
                style="@style/ChipStyle"
                android:text="Relaxation"/>
            <TextView
                style="@style/ChipStyle"
                android:text="Mindfulness"/>
            <TextView
                style="@style/ChipStyle"
                android:text="Peace"/>
            <TextView
                style="@style/ChipStyle"
                android:text="Tranquility"/>
            <TextView
                style="@style/ChipStyle"
                android:text="Inner harmony"/>
        </com.google.android.flexbox.FlexboxLayout>

        <!-- Aura label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aura"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"
            android:layout_marginBottom="8dp"/>

        <!-- Aura days row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                style="@style/DayStyle"
                android:text="27"/>
            <TextView
                style="@style/DayStyle"
                android:text="28"/>
            <TextView
                style="@style/DaySelectedStyle"
                android:text="29"/>
            <TextView
                style="@style/DayStyle"
                android:text="30"/>
            <TextView
                style="@style/DayStyle"
                android:text="1"/>
        </LinearLayout>

        <!-- Vibration label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibration"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"
            android:layout_marginBottom="8dp"/>

        <!-- Vibration icons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_stats"

                android:layout_marginEnd="8dp"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_stats"

                android:layout_marginEnd="8dp"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_stats"

                android:layout_marginEnd="8dp"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_stats"

                android:layout_marginEnd="8dp"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_stats"

                android:layout_marginEnd="8dp"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_stats"
               />
        </LinearLayout>

        <!-- Alignment label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alignment"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"
            android:layout_marginBottom="8dp"/>

        <!-- Calendar grid -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/dark_gray">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:padding="16dp">

                <!-- Days 30, 31, 1, 2, 3, 4, ... -->
                <TextView style="@style/CalendarDayStyle" android:text="30"/>
                <TextView style="@style/CalendarDayStyle" android:text="31"/>
                <TextView style="@style/CalendarDayStyle" android:text="1"/>
                <TextView style="@style/CalendarDayStyle" android:text="2"/>
                <TextView style="@style/CalendarDayStyle" android:text="3"/>
                <TextView style="@style/CalendarDayStyle" android:text="4"/>
                <TextView style="@style/CalendarDayStyle" android:text="5"/>
                <TextView style="@style/CalendarDayStyle" android:text="6"/>
                <TextView style="@style/CalendarDayStyle" android:text="7"/>
                <TextView style="@style/CalendarDayStyle" android:text="8"/>
                <TextView style="@style/CalendarDayStyle" android:text="9"/>
                <TextView style="@style/CalendarDayStyle" android:text="10"/>
                <TextView style="@style/CalendarDaySelectedStyle" android:text="11"/>
                <TextView style="@style/CalendarDaySelectedStyle" android:text="12"/>
                <TextView style="@style/CalendarDaySelectedStyle" android:text="13"/>
                <TextView style="@style/CalendarDaySelectedStyle" android:text="14"/>
                <TextView style="@style/CalendarDaySelectedStyle" android:text="15"/>
                <TextView style="@style/CalendarDayStyle" android:text="16"/>
            </GridLayout>
        </androidx.cardview.widget.CardView>

        <!-- Explore button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Explore"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/bg_explore_btn"
            android:textAllCaps="false"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>