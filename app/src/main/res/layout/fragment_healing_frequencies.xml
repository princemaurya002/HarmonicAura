<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:gravity="center"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healing Frequencies"
            android:textSize="20sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ocean Waves Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/primary_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Ocean Wave Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/img2"
                        android:background="@drawable/circle_mask"
                        android:scaleType="center"
                        android:clipToOutline="true"
                        android:layout_marginEnd="16dp" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ocean Waves"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calming sea sounds"
                            android:textSize="14sp"
                            android:textColor="#424242" />

                    </LinearLayout>

                    <!-- Play Button -->
                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_play_circle"
                        android:background="@drawable/circle_button_background"
                        android:contentDescription="Play Ocean Waves" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Gentle Rain Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/primary_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Rain Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/nature"
                        android:clipToOutline="true"
                        android:scaleType="center"
                        android:background="@drawable/circle_mask"
                        android:layout_marginEnd="16dp"/>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gentle Rain"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soothing rain sounds"
                            android:textSize="14sp"
                            android:textColor="#424242" />

                    </LinearLayout>

                    <!-- Play Button -->
                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_play_circle"
                        android:background="@drawable/circle_button_background"
                        android:contentDescription="Play Gentle Rain" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Forest Ambiance Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/primary_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Forest Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:src="@drawable/img9"
                        android:layout_marginEnd="16dp" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forest Ambiance"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peaceful forest sounds"
                            android:textSize="14sp"
                            android:textColor="#424242" />

                    </LinearLayout>

                    <!-- Play Button -->
                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_play_circle"
                        android:background="@drawable/circle_button_background"
                        android:contentDescription="Play Forest Ambiance" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>