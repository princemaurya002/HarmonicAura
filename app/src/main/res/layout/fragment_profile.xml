<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE1E4">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_customize"
        android:padding="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Back arrow -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search_ic"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"/>

            <!-- App icon -->
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/img1"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_icon_bg"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="16dp"/>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harmonic Aura"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="#222"
                android:layout_marginBottom="4dp"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wellness, Inner Harmony"
                android:textSize="14sp"
                android:textColor="#6A7A90"
                android:layout_marginBottom="16dp"/>

            <!-- Chips Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Chip 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_chip_gray"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star"
                        android:tint="#222"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pers"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Chip 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_chip_gray"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prog"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Person"
                        android:textColor="#222"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Details label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textStyle="bold"
                android:textColor="#222"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="start"/>

            <!-- Details description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explore the world of harmonic wellness with personalized insights and guided meditations to enhance your inner harmony and relaxation journey."
                android:textColor="#222"
                android:textSize="18sp"
                android:layout_marginBottom="32dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed bottom button -->
    <Button
        android:id="@+id/btn_customize"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Customize"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/bg_explore_btn"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>
</RelativeLayout>