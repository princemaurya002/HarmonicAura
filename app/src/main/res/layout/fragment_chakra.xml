<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    android:padding="16dp">

    <!-- Header with meditation icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/meditation_logo"
            android:background="@drawable/circle_mask"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />


    </LinearLayout>

    <!-- Chakra List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Root Chakra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Root Chakra"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_red" />

        </LinearLayout>

        <!-- Sacral Chakra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sacral Chakra"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_orange" />

        </LinearLayout>

        <!-- Solar Plexus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Solar Plexus"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_yellow" />

        </LinearLayout>

        <!-- Heart Chakra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Heart Chakra"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_green" />

        </LinearLayout>

        <!-- Throat Chakra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Throat Chakra"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_blue" />

        </LinearLayout>

        <!-- Third Eye -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Third Eye"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_purple" />

        </LinearLayout>

        <!-- Crown Chakra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crown Chakra"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_pink" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>