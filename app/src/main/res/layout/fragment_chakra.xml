<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Screen Title & Intro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chakra Alignment"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance your energy centers for clarity, vitality, and peace"
                android:textSize="14sp"
                android:textColor="#666"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Chakra Carousel -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Root Chakra Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/root_chakra_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFE5E5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Root Chakra"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grounding · Stability · Security"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="396 Hz"
                            android:textSize="14sp"
                            android:textColor="#222"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/root_chakra_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Balanced"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/root_chakra_heal_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Healing"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#FF5252"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Sacral Chakra Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/sacral_chakra_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFF3E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sacral Chakra"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Creativity · Passion · Joy"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="417 Hz"
                            android:textSize="14sp"
                            android:textColor="#222"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/sacral_chakra_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Blocked"
                            android:textSize="12sp"
                            android:textColor="#F44336"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/sacral_chakra_heal_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Healing"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#FF9800"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Solar Plexus Chakra Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/solar_plexus_chakra_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFDE7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solar Plexus Chakra"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Power · Confidence · Will"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="528 Hz"
                            android:textSize="14sp"
                            android:textColor="#222"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/solar_plexus_chakra_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Balanced"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/solar_plexus_chakra_heal_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Healing"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#FFC107"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Heart Chakra Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/heart_chakra_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#E8F5E9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heart Chakra"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Love · Compassion · Harmony"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="639 Hz"
                            android:textSize="14sp"
                            android:textColor="#222"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/heart_chakra_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Balanced"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/heart_chakra_heal_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Healing"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#4CAF50"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Throat Chakra Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/throat_chakra_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Throat Chakra"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expression · Truth · Communication"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="741 Hz"
                            android:textSize="14sp"
                            android:textColor="#222"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/throat_chakra_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Blocked"
                            android:textSize="12sp"
                            android:textColor="#F44336"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/throat_chakra_heal_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Healing"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#2196F3"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Third Eye Chakra Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/third_eye_chakra_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#EDE7F6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Third Eye Chakra"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intuition · Wisdom · Insight"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="852 Hz"
                            android:textSize="14sp"
                            android:textColor="#222"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/third_eye_chakra_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Balanced"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/third_eye_chakra_heal_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Healing"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#673AB7"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Crown Chakra Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/crown_chakra_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F3E5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crown Chakra"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spirituality · Enlightenment · Unity"
                            android:textSize="12sp"
                            android:textColor="#666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="963 Hz"
                            android:textSize="14sp"
                            android:textColor="#222"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/crown_chakra_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Balanced"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:layout_marginTop="8dp"/>

                        <Button
                            android:id="@+id/crown_chakra_heal_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Healing"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#9C27B0"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Add more chakra cards here -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Chakra Balance Status -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Chakra Balance"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#222"/>

                <!-- Placeholder for Chakra Balance Graph -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/chakra_balance_graph"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/start_scan_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Daily Scan"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 7-Day Chakra Journey -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7-Day Chakra Journey"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#222"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Chakra. One Day. Seven Steps to Alignment."
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="8dp"/>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/journey_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="28"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/start_journey_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Today's Healing"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Daily Journal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Energy Reflection"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#222"/>

                <TextView
                    android:id="@+id/journal_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What made you feel grounded today?"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/journal_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="top"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:hint="Write your reflection here..."/>

                <Button
                    android:id="@+id/save_journal_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log My Energy"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Coming Soon Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track Your Transformation"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#222"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soon, track your emotional and chakra health using our AI-powered biofeedback wearable."
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/join_waitlist_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join the Waitlist"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>